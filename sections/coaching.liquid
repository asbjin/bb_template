{% endcomment %}
<section class="flv-coach" style="--green: {{ section.settings.color_primary }}; --gold: {{ section.settings.color_gold }}; --ink:#111; --bg:#fff;">
  <div class="flv-wrap">

    <!-- HERO -->
    <header class="flv-hero">
      <div class="flv-badges">
        <span class="flv-chip flv-chip--gold">IN OMAGGIO 3 mesi</span>
        <span class="flv-chip">SOLO bundle 180 giorni</span>
        <span class="flv-chip">100% via messaggi</span>
      </div>

      {% if section.settings.hero_icon != blank %}
        <img class="flv-hero-icon" src="{{ section.settings.hero_icon | image_url: width: 192 }}" alt="{{ section.settings.hero_alt | escape }}" loading="lazy">
      {% endif %}

      <h2 class="flv-title">{{ section.settings.title }}</h2>
      <p class="flv-sub">{{ section.settings.subtitle }}</p>

      <div class="flv-cta">
        {% if section.settings.bundle_url != blank %}
          <a class="flv-btn flv-btn--solid" href="{{ section.settings.bundle_url }}">{{ section.settings.cta_bundle }}</a>
        {% endif %}
        {% if section.settings.whatsapp_url != blank %}
          <a class="flv-btn flv-btn--gold" href="{{ section.settings.whatsapp_url }}" target="_blank" rel="noopener nofollow">{{ section.settings.cta_whatsapp }}</a>
        {% endif %}
      </div>
      <p class="flv-note">Niente chiamate o video: supporto rapido, discreto e quando ti serve.</p>
    </header>

    <!-- PERCHÃ‰ Ãˆ DIVERSO -->
    <section class="flv-block flv-points">
      <h3 class="flv-h3">{{ section.settings.usp_title }}</h3>
      <ul class="flv-list">
        <li>ðŸ’¬ <strong>Sempre a portata di mano:</strong> scrivici quando vuoi â€” niente orari rigidi.</li>
        <li>ðŸ§­ <strong>Consigli personalizzati:</strong> routine, basi alimentari e stile di vita in base al tuo profilo.</li>
        <li>ðŸ“ˆ <strong>Focus risultati:</strong> check regolari per ottimizzare abitudini e progressi.</li>
      </ul>
    </section>

    <!-- COME FUNZIONA (senza numeri) -->
    <section class="flv-block flv-how">
      <h3 class="flv-h3">{{ section.settings.how_title }}</h3>
      <div class="flv-grid flv-grid--3">
        {% for block in section.blocks %}
          {% if block.type == 'how' %}
            <article class="flv-card flv-card--lift">
              {% if block.settings.icon != blank %}
                <img class="flv-ico" src="{{ block.settings.icon | image_url: width: 128 }}" alt="{{ block.settings.icon_alt | escape }}" loading="lazy">
              {% endif %}
              <h4 class="flv-h4">{{ block.settings.heading }}</h4>
              <p class="flv-p">{{ block.settings.text }}</p>
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </section>

    <!-- COSA Ãˆ INCLUSO -->
    <section class="flv-block flv-includes">
      <h3 class="flv-h3">{{ section.settings.includes_title }}</h3>
      <div class="flv-grid flv-grid--2">
        {% for block in section.blocks %}
          {% if block.type == 'service' %}
            <article class="flv-card flv-card--lift">
              {% if block.settings.icon != blank %}
                <img class="flv-ico" src="{{ block.settings.icon | image_url: width: 128 }}" alt="{{ block.settings.icon_alt | escape }}" loading="lazy">
              {% endif %}
              <h4 class="flv-h4">{{ block.settings.heading }}</h4>
              <p class="flv-p">{{ block.settings.text }}</p>
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </section>

    <!-- ROADMAP -->
    <section class="flv-block flv-roadmap">
      <h3 class="flv-h3">{{ section.settings.roadmap_title }}</h3>
      <div class="flv-road">
        <div class="flv-stage">
          <div class="flv-dot"></div>
          <h5>Mese 1 â€” Reset & Routine</h5>
          <p>Kick-off, routine base, idratazione, timing pasti, gestione gonfiore.</p>
        </div>
        <div class="flv-stage">
          <div class="flv-dot"></div>
          <h5>Mese 2 â€” Ottimizzazione</h5>
          <p>Adattamento dosi, focus pelle/acne, combinazioni alimentari e lifestyle.</p>
        </div>
        <div class="flv-stage">
          <div class="flv-dot"></div>
          <h5>Mese 3 â€” Consolidamento</h5>
          <p>Stabilizzazione abitudini, piano di mantenimento, checklist finale.</p>
        </div>
      </div>
    </section>

    <!-- OFFERTA -->
    <section class="flv-offer">
      <div class="flv-offer-inner">
        <p class="flv-offer-kicker">IN OMAGGIO per 3 mesi</p>
        <h3 class="flv-h3">Coaching con Specialista â€” valore {{ section.settings.value_anchor }}</h3>
        <p class="flv-p">Riservato esclusivamente al <strong>bundle 180 giorni</strong>. Posti limitati ogni mese per garantire qualitÃ  del supporto.</p>
        <div class="flv-cta">
          {% if section.settings.bundle_url != blank %}
            <a class="flv-btn flv-btn--solid" href="{{ section.settings.bundle_url }}">{{ section.settings.cta_bundle }}</a>
          {% endif %}
          {% if section.settings.whatsapp_url != blank %}
            <a class="flv-btn flv-btn--gold" href="{{ section.settings.whatsapp_url }}" target="_blank" rel="noopener nofollow">{{ section.settings.cta_whatsapp }}</a>
          {% endif %}
        </div>
      </div>
      <p class="flv-legal">Il coaching non sostituisce il parere medico.</p>
    </section>

  </div>

  <style>
    .flv-coach{background:var(--bg);color:var(--ink);}
    .flv-wrap{max-width:{{ section.settings.max_width }};margin:0 auto;padding:20px 16px;}

    .flv-hero{background:linear-gradient(180deg, rgba(215,169,75,.10), transparent);
      border:1px solid rgba(215,169,75,.35);border-radius:18px;padding:16px;
      box-shadow:0 10px 28px rgba(215,169,75,.14)}
    .flv-badges{display:flex;gap:8px;flex-wrap:wrap;margin-bottom:8px}
    .flv-chip{display:inline-flex;align-items:center;padding:6px 10px;border-radius:999px;
      background:#F7F1E3;border:1px solid rgba(215,169,75,.6);font-size:12px;font-weight:700}
    .flv-chip--gold{background:linear-gradient(180deg,#F6E4B6,#EFD28B)}
    .flv-hero-icon{width:72px;height:72px;object-fit:contain;display:block;margin-bottom:8px}
    .flv-title{font-size:28px;line-height:1.2;margin:8px 0 6px}
    .flv-sub{font-size:16px;opacity:.9;margin:0 auto 6px}
    .flv-note{font-size:13px;opacity:.85;margin-top:8px}
    .flv-cta{display:flex;gap:10px;flex-wrap:wrap;margin-top:10px}
    .flv-btn{display:inline-block;padding:12px 16px;border-radius:14px;text-decoration:none;font-weight:700}
    .flv-btn--solid{background:var(--green);color:#fff;box-shadow:0 6px 20px rgba(0,126,64,.25)}
    .flv-btn--gold{background:linear-gradient(180deg,var(--gold),#C99638);color:#1A1A1A}
    .flv-link{color:var(--green);font-weight:700;text-decoration:underline}

    .flv-block{margin-top:22px}
    .flv-h3{font-size:20px;margin:0 0 8px}
    .flv-h4{font-size:17px;margin:6px 0}
    .flv-p{font-size:15px;margin:0}

    .flv-grid{display:grid;gap:12px}
    .flv-grid--3{grid-template-columns:1fr}
    .flv-grid--2{grid-template-columns:1fr}
    .flv-card{background:#FAFAFA;border:1px solid #EEE;border-radius:16px;padding:14px}
    .flv-card--lift{transition:transform .15s ease, box-shadow .15s ease}
    .flv-card--lift:hover{transform:translateY(-2px);box-shadow:0 10px 24px rgba(0,0,0,.06)}
    .flv-ico{width:56px;height:56px;object-fit:contain}

    /* Roadmap senza numeri: linea dorata + dot */
    .flv-road{display:flex;gap:10px;flex-direction:column;position:relative}
    .flv-road:before{content:"";position:absolute;left:14px;top:8px;bottom:8px;width:2px;background:linear-gradient(180deg,var(--gold),rgba(215,169,75,.3))}
    .flv-stage{position:relative;background:#fff;border:1px solid #EEE;border-radius:14px;padding:12px 12px 12px 48px;box-shadow:0 8px 24px rgba(0,0,0,.04)}
    .flv-dot{position:absolute;left:6px;top:14px;width:16px;height:16px;border-radius:50%;background:var(--gold);box-shadow:0 0 0 4px rgba(215,169,75,.25)}

    .flv-offer{margin-top:24px}
    .flv-offer-inner{border-radius:18px;padding:16px;background:linear-gradient(180deg, rgba(215,169,75,.18), rgba(215,169,75,.06));border:1px solid rgba(215,169,75,.45)}
    .flv-offer-kicker{font-weight:800;letter-spacing:.2px;margin:0 0 4px}
    .flv-legal{font-size:12px;opacity:.8;margin-top:8px;text-align:center}

    @media (min-width:768px){
      .flv-title{font-size:34px}
      .flv-sub{font-size:18px;max-width:680px}
      .flv-grid--3{grid-template-columns:repeat(3,1fr)}
      .flv-grid--2{grid-template-columns:repeat(2,1fr)}
      .flv-road{flex-direction:row}
      .flv-road:before{display:none}
      .flv-stage{flex:1;padding-left:16px}
      .flv-dot{display:none}
    }
  </style>
</section>

