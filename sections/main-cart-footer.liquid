<!-- === J A V A S C R I P T  (progress bar dynamics) === -->
<script>
document.addEventListener('DOMContentLoaded', () => {
  const threshold = 20; // soglia spedizione gratuita (â‚¬)
  const totalSelector = '.totals__total-value';
  const text = document.getElementById('shipping-text');
  const fill = document.getElementById('shipping-fill');

  function updateBar() {
    const totalElement = document.querySelector(totalSelector);
    if (!totalElement || !text || !fill) return;

    const raw = totalElement.innerText.replace(/[^\d.,]/g, '').trim();
    const total = parseFloat(raw.replace('.', '').replace(',', '.')) || 0;

    const percent = Math.min((total / threshold) * 100, 100);
    fill.style.width = percent + '%';

    if (total >= threshold) {
      text.innerHTML = "ðŸŽ‰ Hai ottenuto la <strong>spedizione gratuita!</strong>";
      fill.style.backgroundColor = "#007E40"; // vert Floreva
    } else {
      const missing = (threshold - total).toFixed(2).replace('.', ',');
      text.innerHTML = `ðŸšš Ti mancano <strong>â‚¬${missing}</strong> per ottenere la <strong>spedizione gratuita!</strong>`;
      fill.style.backgroundColor = "#C8A24F"; // or Floreva
    }
  }

  // Mise Ã  jour initiale
  updateBar();

  // Observer pour changements AJAX Shopify
  const observer = new MutationObserver(updateBar);
  const target = document.querySelector(totalSelector)?.parentNode;
  if (target) observer.observe(target, { childList: true, subtree: true });
});
</script>



