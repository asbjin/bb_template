{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .image-text-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch !important;
  }

  .image-text-slide-{{ section.id }} {
    display: flex !important;
    flex-direction: column;
    gap: {{ slide_gap_mobile }}px;
    box-sizing: border-box !important;
    height: auto !important;
    cursor: pointer;
    z-index: 1;
  }

  .image-text-slide-{{ section.id }}.swiper-slide-active {
    z-index: 2;
  }

  .image-text-content-{{ section.id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: {{ content_padding_vertical_mobile }}px {{ content_padding_horizontal_mobile }}px;
    border-radius: {{ content_radius }}px;
    box-sizing: border-box;
  }

  .image-text-heading-{{ section.id }} {
    margin-top: {{ heading_mt | times: 0.75 | round: 0 }}px;
    order: {{ heading_position_mobile }};
    text-align: {{ heading_align_mobile }};
  }

  .image-text-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }
  
  .image-text-subheading-{{ section.id }} {
    order: {{ sub_heading_position_mobile }};
    margin-top: {{ sub_heading_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ sub_heading_align_mobile }};
  }

  .image-text-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .image-text-text-{{ section.id }} {
    order: {{ text_position_mobile }};
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ text_align_mobile }};
  }

  .image-text-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .image-text-button-{{ section.id }} {
    order: {{ button_position_mobile }};
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    max-width: fit-content;
    margin: 0;
    margin-top: {{ button_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ button_size_mobile }}px;
    font-weight: 700;
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
  }

  .image-text-media-{{ section.id }} {
    display: flex;
    justify-content: center;
    position: relative;
    height: {{ image_height_mobile }}px;
  }

  .image-text-image-{{ section.id }} {
    margin: 0px auto;
    max-width: {{ image_width_mobile }}%;
    width: 100%;
    overflow: hidden;
    border-radius: {{ image_radius }}px;
  }

  .image-text-image-{{ section.id }} img,
  .image-text-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-height: {{section.settings.image_height_desktop}}px;
  }

  .image-text-image-{{ section.id }} svg {
    background-color: #DDDDDD;
  }

  .image-text-pagination-{{ section.id }} {
    position: absolute !important;
    left: 0px !important;
    right: unset !important;
    width: 100% !important;
    display: flex !important;
    align-items: center;
    justify-content: center;
    gap: 5px;
  }

  .image-text-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px;
    height: {{ dots_size_mobile }}px;
    background-color: {{ dots_color }};
    opacity: 0.6;
    transition: all 0.25s ease 0s;
  }

  .image-text-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    opacity: 1;
    width: {{ dots_size_mobile | times: 4 }}px;
    border-radius: {{ dots_size_mobile | times: 0.5 }}px;
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .image-text-slide-{{ section.id }} {
      display: grid !important;
      gap: {{ slide_gap }}px;
    }

    .image-text-content-{{ section.id }} {
      padding: {{ content_padding_vertical }}px {{ content_padding_horizontal }}px;
    }

    .image-text-heading-{{ section.id }} {
      margin-top: {{ heading_mt }}px;
      order: {{ heading_position }};
      text-align: {{ heading_align }};
    }

    .image-text-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .image-text-subheading-{{ section.id }} {
      order: {{ sub_heading_position }};
      margin-top: {{ sub_heading_mt }}px;
      text-align: {{ sub_heading_align }};
    }

    .image-text-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .image-text-text-{{ section.id }} {
      order: {{ text_position }};
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }
    
    .image-text-text-{{ section.id }} *{
      font-size: {{text_size }}px;
    }

    .image-text-button-{{ section.id }} {
      order: {{ button_position }};
      margin-top: {{ button_mt }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }

    .image-text-media-{{ section.id }} {
      flex-direction: column;
      height: 100%;
    }

    .image-text-image-{{ section.id }} {
      max-width: 100%;
      height: 100%;
    }
    
    .image-text-pagination-{{ section.id }} {
      left: {{ 100 | minus: image_width }}% !important;
      width: {{ image_width }}% !important;
    }

    .image-text-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px;
      height: {{ dots_size }}px;
    }

    .image-text-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
      width: {{ dots_size | times: 4 }}px;
      border-radius: {{ dots_size | times: 0.5 }}px;
    }
  }
  
{%- endstyle -%}

