                <source src="{{ section.settings.video_5 }}" type="video/mp4">
              </video>
              {% if section.settings.thumbnail_5 != blank %}
              <img src="{{ section.settings.thumbnail_5 | image_url: width: 500 }}" class="video-poster">
              {% endif %}
              <div class="video-control">
                <button class="play-pause-btn" onclick="toggleVideo(this)">
                  <div class="play-icon"></div>
