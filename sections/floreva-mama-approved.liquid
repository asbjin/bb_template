<style>
.floreva-mama-section {
  position: relative;
  background: linear-gradient(135deg, #6ee7b7 0%, #10b981 100%);
  padding: 60px 20px 70px;
  overflow: hidden;
  isolation: isolate;
}

/* ========= BULLES FLOTTANTES EN ARRI√àRE-PLAN ========= */
.floating-bubbles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
  overflow: hidden;
}

.bubble {
  position: absolute;
  border-radius: 50%;
  animation: float-bubble linear infinite;
}

/* Tailles r√©duites pour mobile */
.bubble-small {
  width: 30px;
  height: 30px;
}

.bubble-medium {
  width: 50px;
  height: 50px;
}

.bubble-large {
  width: 80px;
  height: 80px;
}

/* Styles de bulles avec d√©grad√©s doux */
.bubble-style-1 {
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.8), rgba(110, 231, 183, 0.3));
  box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.4);
}

.bubble-style-2 {
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.7), rgba(16, 185, 129, 0.25));
  box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.3);
}

.bubble-style-3 {
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.9), rgba(167, 243, 208, 0.2));
  box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.5);
}

@keyframes float-bubble {
  0% {
    transform: translateY(calc(100vh + 150px)) translateX(0) scale(0);
    opacity: 0;
  }
  5% {
    opacity: 0.7;
    transform: scale(1);
  }
  95% {
    opacity: 0.7;
  }
  100% {
    transform: translateY(-150px) translateX(var(--drift, 50px)) scale(0.7);
    opacity: 0;
  }
}

/* ========= √âTOILES SCINTILLANTES ========= */
.twinkling-stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

.star {
  position: absolute;
  color: rgba(255, 255, 255, 0.9);
  font-size: 18px;
  animation: twinkle ease-in-out infinite;
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
}

@keyframes twinkle {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8) rotate(0deg);
  }
  50% {
    opacity: 1;
    transform: scale(1.3) rotate(180deg);
  }
}

/* ========= FORMES D√âCORATIVES (cercles doux) ========= */
.decorative-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
  opacity: 0.1;
}

.shape-circle {
  position: absolute;
  border-radius: 50%;
  background: white;
  animation: pulse-shape ease-in-out infinite;
}

.shape-1 {
  width: 150px;
  height: 150px;
  top: 10%;
  left: 5%;
  animation-duration: 8s;
}

.shape-2 {
  width: 120px;
  height: 120px;
  top: 60%;
  right: 8%;
  animation-duration: 10s;
  animation-delay: -2s;
}

.shape-3 {
  width: 80px;
  height: 80px;
  bottom: 15%;
  left: 12%;
  animation-duration: 12s;
  animation-delay: -4s;
}

@keyframes pulse-shape {
  0%, 100% {
    transform: scale(1);
    opacity: 0.08;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.15;
  }
}

.mama-container {
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 3;
}

.mama-title {
  font-family: 'Quicksand', 'Nunito', 'Poppins', sans-serif;
  font-size: 48px;
  font-weight: 800;
  color: white;
  text-align: center;
  margin-bottom: 40px;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.carousel-outer {
  position: relative;
  max-width: 900px;
  margin: 0 auto;
}

.carousel-viewport {
  overflow: hidden;
  position: relative;
  border-radius: 24px;
}

.carousel-slides-wrapper {
  display: flex;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.single-slide {
  min-width: 100%;
  width: 100%;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  box-sizing: border-box;
}

.vid-box {
  position: relative;
  width: 280px;
  height: 500px;
  border-radius: 20px;
  overflow: hidden;
  background: #000;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  flex-shrink: 0;
  border: 3px solid rgba(255, 255, 255, 0.4);
}

.vid-box video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.vid-thumb {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 2;
  transition: opacity 0.3s;
}

.vid-box.vid-playing .vid-thumb {
  opacity: 0;
  pointer-events: none;
}

.vid-btn-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  opacity: 1;
  transition: opacity 0.3s;
}

.vid-btn-wrapper.btn-hidden {
  opacity: 0;
  pointer-events: none;
}

.vid-btn {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #6ee7b7 0%, #10b981 100%);
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
}

.vid-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 8px 30px rgba(16, 185, 129, 0.7);
}

.vid-btn:active {
  transform: scale(0.95);
}

.play-icon {
  font-size: 32px;
  color: #fff;
  line-height: 1;
  transform: translateX(2px);
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.pause-symbol {
  display: none;
  gap: 6px;
}

.pause-symbol span {
  width: 7px;
  height: 26px;
  background: white;
  border-radius: 2px;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

.vid-box.vid-playing .play-icon {
  display: none;
}

.vid-box.vid-playing .pause-symbol {
  display: flex;
}

.arrow-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.95);
  border: none;
  width: 55px;
  height: 55px;
  border-radius: 50%;
  cursor: pointer;
  z-index: 10;
  transition: all 0.3s;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-char {
  font-size: 28px;
  line-height: 1;
  color: #10b981;
  font-weight: 700;
}

.arrow-btn:hover {
  background: white;
  transform: translateY(-50%) scale(1.15);
  box-shadow: 0 6px 24px rgba(16, 185, 129, 0.3);
}

.arrow-btn.btn-prev {
  left: -70px;
