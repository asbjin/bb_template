    <div class="section-{{ section.id }}-settings">
      <div class="image-text-slider-{{ section.id }} swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="image-text-slide-{{ section.id }} image-text-slide-{{ block.id }} swiper-slide">
              <div class="image-text-content-{{ section.id }}">
                
                {% if block.settings.heading != blank %}
                  <div class="image-text-heading-{{ section.id }}">{{ block.settings.heading }}</div>
                {% endif %}
      
                {% if block.settings.sub_heading != blank %}
                  <div class="image-text-subheading-{{ section.id }}">{{ block.settings.sub_heading }}</div>
                {% endif %}
      
                {% if block.settings.text != blank %}
                  <div class="image-text-text-{{ section.id }}">{{ block.settings.text }}</div>
                {% endif %}
      
                {% if block.settings.button != blank %}
                  <a href="{{ block.settings.button_url }}" class="image-text-button-{{ section.id }}">
                    {{ block.settings.button }}
                  </a>
                {% endif %}
            
              </div>
              <div class="image-text-media-{{ section.id }}">
                <div class="image-text-image-{{ section.id }}">
                  {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}lazy="loading"{% endif %}>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div class="image-text-pagination-{{ section.id }} swiper-pagination"></div>
      </div>
    </div>
</div>

