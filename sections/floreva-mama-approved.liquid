          </div>
          {% assign slide_count = slide_count | plus: 1 %}
          {% endif %}
          
        </div>
      </div>
      
      <button class="nav-btn next" onclick="moveSlide(1)">
        <div class="arrow-right"></div>
      </button>
      
      <div class="dots" id="dotsContainer"></div>
      
    </div>
    
  </div>

  <div class="wave-bottom">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="wave-shape"></path>
    </svg>
  </div>

</section>

<script>
var currentSlideIndex = 0;
var totalSlides = document.querySelectorAll('.slide').length;
var carouselInner = document.getElementById('carouselInner');
var dotsContainer = document.getElementById('dotsContainer');

// Create dots
for (var i = 0; i < totalSlides; i++) {
  var dot = document.createElement('button');
  dot.className = 'dot';
  if (i === 0) dot.className += ' active';
  dot.onclick = (function(index) {
    return function() { goToSlide(index); };
  })(i);
  dotsContainer.appendChild(dot);
}

function updateSlide() {
  carouselInner.style.transform = 'translateX(-' + (currentSlideIndex * 100) + '%)';
  var dots = dotsContainer.querySelectorAll('.dot');
  for (var i = 0; i < dots.length; i++) {
    dots[i].className = i === currentSlideIndex ? 'dot active' : 'dot';
  }
}

function moveSlide(direction) {
  stopAllVideos();
  currentSlideIndex += direction;
  if (currentSlideIndex < 0) currentSlideIndex = totalSlides - 1;
  if (currentSlideIndex >= totalSlides) currentSlideIndex = 0;
  updateSlide();
}

function goToSlide(index) {
  stopAllVideos();
  currentSlideIndex = index;
  updateSlide();
}

function stopAllVideos() {
  var videos = document.querySelectorAll('.video-item');
  for (var i = 0; i < videos.length; i++) {
    var video = videos[i].querySelector('video');
    if (video) {
      video.pause();
      video.currentTime = 0;
      videos[i].classList.remove('playing');
    }
  }
}

function toggleVideo(btn) {
  var videoItem = btn.closest('.video-item');
  var video = videoItem.querySelector('video');
  
  if (video.paused) {
    stopAllVideos();
    videoItem.classList.add('playing');
    video.muted = false;
    video.play().catch(function() {
      video.muted = true;
      video.play();
    });
  } else {
    video.pause();
    videoItem.classList.remove('playing');
  }
}

// Video ended event
var allVideos = document.querySelectorAll('.video-item');
for (var i = 0; i < allVideos.length; i++) {
  var vid = allVideos[i].querySelector('video');
  if (vid) {
    vid.onended = (function(item) {
      return function() {
        item.classList.remove('playing');
        this.currentTime = 0;
      };
    })(allVideos[i]);
  }
}

// Auto slide
setInterval(function() {
  moveSlide(1);
}, 8000);
</script>

