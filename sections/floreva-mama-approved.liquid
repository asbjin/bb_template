<script>
(function() {
  function start() {
    var wrapper = document.getElementById('slides-wrapper');
    var allSlides = document.querySelectorAll('.single-slide');
    var btnPrev = document.querySelector('.btn-prev');
    var btnNext = document.querySelector('.btn-next');
    var dotsBox = document.getElementById('dots');
    var viewport = document.querySelector('.carousel-viewport');

    if (!wrapper || !allSlides.length) return;

    var current = 0;
    var total = allSlides.length;

    // Dots
    for (var i = 0; i < total; i++) {
      var dot = document.createElement('button');
      dot.className = 'slide-dot' + (i === 0 ? ' dot-active' : '');
      dot.type = 'button';
      dot.setAttribute('data-index', i);
      dot.onclick = function() {
        jumpTo(parseInt(this.getAttribute('data-index')));
      };
      dotsBox.appendChild(dot);
    }

    var allDots = dotsBox.querySelectorAll('.slide-dot');

    function refresh() {
      wrapper.style.transform = 'translateX(-' + (current * 100) + '%)';
      for (var i = 0; i < allDots.length; i++) {
        allDots[i].className = i === current ? 'slide-dot dot-active' : 'slide-dot';
      }
    }

    function jumpTo(idx) {
      stopAll();
      current = idx;
      refresh();
    }

    function goNext() {
      if (total <= 1) return;
      current = (current + 1) % total;
      jumpTo(current);
    }

    function goPrev() {
      if (total <= 1) return;
      current = (current - 1 + total) % total;
      jumpTo(current);
    }

    if (btnPrev) btnPrev.onclick = goPrev;
    if (btnNext) btnNext.onclick = goNext;

    function stopAll() {
      var allVidBoxes = document.querySelectorAll('.vid-box');
      for (var i = 0; i < allVidBoxes.length; i++) {
        var vid = allVidBoxes[i].querySelector('video');
        if (vid) {
          vid.pause();
          vid.currentTime = 0;
          allVidBoxes[i].classList.remove('vid-playing');
        }
      }
    }

    // Play / pause buttons
    var vidBoxes = document.querySelectorAll('.vid-box');
    for (var i = 0; i < vidBoxes.length; i++) {
      (function(box) {
        var vid = box.querySelector('video');
        var btn = box.querySelector('.vid-btn');
        if (!vid || !btn) return;

        btn.onclick = function() {
          if (vid.paused) {
            stopAll();
            box.classList.add('vid-playing');
            vid.muted = false;
            vid.play().catch(function() {
              vid.muted = true;
              vid.play();
            });
          } else {
            vid.pause();
            box.classList.remove('vid-playing');
          }
        };

        vid.onended = function() {
          box.classList.remove('vid-playing');
          vid.currentTime = 0;
        };
      })(vidBoxes[i]);
    }

    // Auto-slide only if more than 1 slide
    if (total > 1) {
      setInterval(goNext, 8000);
    }

    // Touch swipe (mobile)
    if (viewport && total > 1) {
      var startX = 0;
      var isDragging = false;

      viewport.addEventListener('touchstart', function(e) {
        startX = e.touches[0].clientX;
        isDragging = true;
      });

      viewport.addEventListener('touchend', function(e) {
        if (!isDragging) return;
        var endX = e.changedTouches[0].clientX;
        var diffX = endX - startX;
        var threshold = 50;

        if (Math.abs(diffX) > threshold) {
          if (diffX < 0) {
            goNext();
          } else {
            goPrev();
          }
        }
        isDragging = false;
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', start);
  } else {
    start();
  }
})();
</script>

