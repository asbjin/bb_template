<script>
 function handleMobileEvents() {
   const iconItems = document.querySelectorAll('.icon-item');
   const pc_dream_overlay = document.querySelector('.pc-dream-overlay');
 
   iconItems.forEach(item => {
     const descriptionContainer = item.querySelector('.description-container');
     const closeBtn = item.querySelector('.close-btn');
 
     // Touch/click event to show description
     item.addEventListener('click', (e) => {
       // Prevent this if clicking inside the description container
       if (e.target.closest('.description-container')) return;
 
       descriptionContainer.style.display = 'block';
       pc_dream_overlay.style.display = 'block';
     });
 
     // Close button functionality
     closeBtn.addEventListener('click', () => {
       descriptionContainer.style.display = 'none';
       pc_dream_overlay.style.display = 'none';
     });
   });
 }
 
 function handleWebEvents() {
   const iconItems = document.querySelectorAll('.icon-item');
   const closeButtons = document.querySelectorAll('.close-btn');
 
   iconItems.forEach((item) => {
     item.addEventListener('mouseenter', () => {
       item.querySelector('.description-container').style.display = 'block';
     });
 
     item.addEventListener('mouseleave', () => {
       item.querySelector('.description-container').style.display = 'none';
     });
   });
 
   closeButtons.forEach((btn) => {
     btn.addEventListener('click', () => {
       btn.parentElement.style.display = 'none';
     });
   });
 }
 
 function initializeEvents() {
   const screenWidth = window.innerWidth;
 
   if (screenWidth <= 768) {
     handleMobileEvents();
   } else {
     handleWebEvents();
   }
 }
 
 document.addEventListener('DOMContentLoaded', initializeEvents);
 window.addEventListener('resize', initializeEvents);
</script>
 
