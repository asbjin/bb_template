<script>
(function() {
  // Cr√©er les bulles flottantes (r√©duit pour mobile)
  function createBubbles() {
    var container = document.getElementById('bubbles-container');
    if (!container) return;

    var sizes = ['bubble-small', 'bubble-medium', 'bubble-large'];
    var styles = ['bubble-style-1', 'bubble-style-2', 'bubble-style-3'];
    
    // R√©duire le nombre de bulles sur mobile
    var isMobile = window.innerWidth < 768;
    var bubbleCount = isMobile ? 10 : 15;

    for (var i = 0; i < bubbleCount; i++) {
      var bubble = document.createElement('div');
      bubble.className = 'bubble ' + sizes[Math.floor(Math.random() * sizes.length)] + ' ' + styles[Math.floor(Math.random() * styles.length)];
      
      var leftPos = Math.random() * 100;
      var duration = 8 + Math.random() * 8;
      var delay = Math.random() * 8;
      var drift = (Math.random() - 0.5) * (isMobile ? 100 : 200);
      
      bubble.style.left = leftPos + '%';
      bubble.style.animationDuration = duration + 's';
      bubble.style.animationDelay = delay + 's';
      bubble.style.setProperty('--drift', drift + 'px');
      
      container.appendChild(bubble);
    }
  }

  // Cr√©er les √©toiles scintillantes (r√©duit pour mobile)
  function createStars() {
    var container = document.getElementById('stars-container');
    if (!container) return;

    var starSymbols = ['‚ú®', '‚≠ê', 'üí´', 'üåü'];
    
    // R√©duire le nombre d'√©toiles sur mobile
    var isMobile = window.innerWidth < 768;
    var starCount = isMobile ? 8 : 12;

    for (var i = 0; i < starCount; i++) {
      var star = document.createElement('div');
      star.className = 'star';
      star.textContent = starSymbols[Math.floor(Math.random() * starSymbols.length)];
      
      star.style.left = (Math.random() * 90 + 5) + '%';
      star.style.top = (Math.random() * 90 + 5) + '%';
      star.style.animationDuration = (2 + Math.random() * 3) + 's';
      star.style.animationDelay = (Math.random() * 5) + 's';
      
      container.appendChild(star);
    }
  }

  function startCarousel() {
    var wrapper = document.getElementById('slides-wrapper');
    var allSlides = document.querySelectorAll('.single-slide');
    var btnPrev = document.querySelector('.btn-prev');
    var btnNext = document.querySelector('.btn-next');
    var dotsBox = document.getElementById('dots');

    if (!wrapper || !allSlides.length) return;

    var current = 0;
    var total = allSlides.length;

    for (var i = 0; i < total; i++) {
      var dot = document.createElement('button');
      dot.className = 'slide-dot' + (i === 0 ? ' dot-active' : '');
      dot.type = 'button';
      dot.setAttribute('data-index', i);
      dot.setAttribute('aria-label', 'Vid√©o ' + (i + 1));
      dot.onclick = function() {
        jumpTo(parseInt(this.getAttribute('data-index')));
      };
      dotsBox.appendChild(dot);
    }

    var allDots = dotsBox.querySelectorAll('.slide-dot');

    function refresh() {
      wrapper.style.transform = 'translateX(-' + (current * 100) + '%)';
      for (var i = 0; i < allDots.length; i++) {
        allDots[i].className = i === current ? 'slide-dot dot-active' : 'slide-dot';
      }
    }

    function jumpTo(idx) {
      stopAll();
      current = idx;
      refresh();
    }

    function goNext() {
      if (total <= 1) return;
      current = (current + 1) % total;
      jumpTo(current);
    }

    function goPrev() {
      if (total <= 1) return;
      current = (current - 1 + total) % total;
      jumpTo(current);
    }

    if (btnPrev) btnPrev.onclick = goPrev;
    if (btnNext) btnNext.onclick = goNext;

    function stopAll() {
      var allVidBoxes = document.querySelectorAll('.vid-box');
      for (var i = 0; i < allVidBoxes.length; i++) {
        var box = allVidBoxes[i];
        var vid = box.querySelector('video');
        var wrapperBtn = box.querySelector('.vid-btn-wrapper');

        if (vid) {
          vid.pause();
          vid.currentTime = 0;
        }
        box.classList.remove('vid-playing');

        if (wrapperBtn) {
          wrapperBtn.classList.remove('btn-hidden');
        }
        if (box._hideTimeout) {
          clearTimeout(box._hideTimeout);
          box._hideTimeout = null;
        }
      }
    }

    var vidBoxes = document.querySelectorAll('.vid-box');
    for (var i = 0; i < vidBoxes.length; i++) {
      (function(box) {
        var vid = box.querySelector('video');
        var btn = box.querySelector('.vid-btn');
        var wrapperBtn = box.querySelector('.vid-btn-wrapper');
        if (!vid || !btn || !wrapperBtn) return;

        box._hideTimeout = null;

        function scheduleHide() {
          if (box._hideTimeout) {
            clearTimeout(box._hideTimeout);
          }
          box._hideTimeout = setTimeout(function() {
            if (!vid.paused) {
              wrapperBtn.classList.add('btn-hidden');
            }
          }, 1500);
        }

        btn.onclick = function() {
          if (vid.paused) {
            wrapperBtn.classList.remove('btn-hidden');
            stopAll();
            box.classList.add('vid-playing');
            vid.muted = false;
            vid.play().then(scheduleHide).catch(function() {
              vid.muted = true;
              vid.play().then(scheduleHide);
            });
          } else {
            vid.pause();
            box.classList.remove('vid-playing');
            wrapperBtn.classList.remove('btn-hidden');
            if (box._hideTimeout) {
              clearTimeout(box._hideTimeout);
              box._hideTimeout = null;
            }
          }
        };

        vid.onended = function() {
          box.classList.remove('vid-playing');
          vid.currentTime = 0;
          wrapperBtn.classList.remove('btn-hidden');
          if (box._hideTimeout) {
            clearTimeout(box._hideTimeout);
            box._hideTimeout = null;
          }
        };
      })(vidBoxes[i]);
    }

    if (total > 1) {
      setInterval(goNext, 8000);
    }

    var viewport = document.querySelector('.carousel-viewport');
    if (viewport && total > 1) {
      var startX = 0;
      var isDragging = false;

      viewport.addEventListener('touchstart', function(e) {
        startX = e.touches[0].clientX;
        isDragging = true;
      });

      viewport.addEventListener('touchend', function(e) {
        if (!isDragging) return;
        var endX = e.changedTouches[0].clientX;
        var diffX = endX - startX;
        var threshold = 50;

        if (Math.abs(diffX) > threshold) {
          if (diffX < 0) {
            goNext();
          } else {
            goPrev();
          }
        }
        isDragging = false;
      });
    }
  }

  function init() {
    createBubbles();
    createStars();
    startCarousel();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

