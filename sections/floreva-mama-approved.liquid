              </video>
              {% if section.settings.thumbnail_4 != blank %}
              <img src="{{ section.settings.thumbnail_4 | image_url: width: 500 }}" class="video-poster">
              {% endif %}
              <div class="video-control">
                <button class="play-pause-btn" onclick="toggleVideo(this)">
                  <div class="play-icon"></div>
