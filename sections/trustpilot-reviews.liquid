{% comment %}
  Floreva Testimonials Section
  Mobile: Carousel avec navigation
  Desktop: 3 colonnes par ligne
{% endcomment %}

{% schema %}
{
  "name": "Floreva Testimonianze",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Titolo sezione",
      "default": "Trustpilot reviews"
    },
    {
      "type": "text",
      "id": "rating_text",
      "label": "Testo rating",
      "default": "Excellent"
    },
    {
      "type": "text",
      "id": "rating_score",
      "label": "Punteggio",
      "default": "4.9 / 5"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonianza",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titolo",
          "default": "Finalmente... qualcosa che ha aiutato!"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Contenuto testimonianza"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Nome autore",
          "default": "Maria R."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Floreva Testimonianze",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .floreva-testimonials {
    padding: 60px 20px;
    background-color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .floreva-testimonials__header {
    text-align: center;
    margin-bottom: 50px;
  }

  .floreva-testimonials__title {
    font-size: 48px;
    font-weight: 900;
    color: #191919;
    margin-bottom: 15px;
    letter-spacing: -1px;
  }

  .floreva-testimonials__rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 22px;
    color: #191919;
  }

  .floreva-testimonials__rating-text {
    font-weight: 400;
  }

  .floreva-testimonials__rating-score {
    font-weight: 700;
  }

  .floreva-testimonials__stars {
    display: flex;
    gap: 2px;
  }

  .floreva-testimonials__star {
    width: 26px;
    height: 26px;
    background-color: #00b67a;
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
  }

  .floreva-testimonials__container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
  }

  /* Mobile: Carousel */
  .floreva-testimonials__carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 20px;
    padding: 0 20px 30px;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .floreva-testimonials__carousel::-webkit-scrollbar {
    display: none;
  }

  .floreva-testimonials__card {
    flex: 0 0 85%;
    scroll-snap-align: center;
    background: #f5f5f5;
    border-radius: 20px;
    padding: 40px 30px;
    box-shadow: none;
    display: flex;
    flex-direction: column;
  }

  .floreva-testimonials__card-title {
    font-size: 26px;
    font-weight: 700;
    color: #191919;
    margin-bottom: 30px;
    text-align: center;
    line-height: 1.2;
  }

  .floreva-testimonials__card-content {
    font-size: 17px;
    line-height: 1.6;
    color: #191919;
    margin-bottom: 0;
    flex-grow: 1;
    text-align: center;
  }

  .floreva-testimonials__card-author {
    font-size: 19px;
    font-weight: 600;
    color: #191919;
    text-align: center;
    margin-top: 30px;
  }

  /* Navigation dots mobile */
  .floreva-testimonials__nav {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
  }

  .floreva-testimonials__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #d0d0d0;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .floreva-testimonials__dot.active {
    background-color: #191919;
    width: 12px;
    height: 12px;
  }

  /* Arrows mobile */
  .floreva-testimonials__arrows {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
  }

  .floreva-testimonials__arrow {
    width: 45px;
    height: 45px;
    border: none;
    background-color: #e8e8e8;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 20px;
    color: #666;
  }

  .floreva-testimonials__arrow:hover {
    background-color: #00b67a;
    color: white;
  }

  .floreva-testimonials__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Desktop: Grid 3 columns */
  @media (min-width: 768px) {
    .floreva-testimonials {
      padding: 80px 40px;
    }

    .floreva-testimonials__carousel {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
      overflow: visible;
      padding: 0;
    }

    .floreva-testimonials__card {
      flex: none;
      scroll-snap-align: none;
    }

    .floreva-testimonials__nav,
    .floreva-testimonials__arrows {
      display: none;
    }

    .floreva-testimonials__title {
      font-size: 56px;
    }
  }

  /* Scroll button fixe */
  .floreva-testimonials__scroll-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 55px;
    height: 55px;
    background: linear-gradient(135deg, #00b67a 0%, #00d68f 100%);
    border: none;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 182, 122, 0.4);
    transition: all 0.3s ease;
    z-index: 1000;
  }

  .floreva-testimonials__scroll-top:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(0, 182, 122, 0.5);
  }

  .floreva-testimonials__scroll-icon {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 12px solid white;
  }
</style>

<div class="floreva-testimonials">
  <div class="floreva-testimonials__header">
    <h2 class="floreva-testimonials__title">{{ section.settings.section_title }}</h2>
    <div class="floreva-testimonials__rating">
      <span class="floreva-testimonials__rating-text">{{ section.settings.rating_text }}</span>
      <span class="floreva-testimonials__rating-score">{{ section.settings.rating_score }}</span>
      <div class="floreva-testimonials__stars">
        {% for i in (1..5) %}
          <div class="floreva-testimonials__star"></div>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="floreva-testimonials__container">
    <div class="floreva-testimonials__carousel" id="floreva-carousel">
      {% for block in section.blocks %}
        <div class="floreva-testimonials__card" {{ block.shopify_attributes }}>
          <h3 class="floreva-testimonials__card-title">{{ block.settings.title }}</h3>
          <p class="floreva-testimonials__card-content">{{ block.settings.content }}</p>
          <p class="floreva-testimonials__card-author">{{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>

    <!-- Navigation dots (mobile only) -->
    <div class="floreva-testimonials__nav" id="floreva-dots"></div>

    <!-- Arrows (mobile only) -->
    <div class="floreva-testimonials__arrows">
      <button class="floreva-testimonials__arrow floreva-testimonials__arrow--prev" id="floreva-prev">
        ‹
      </button>
      <button class="floreva-testimonials__arrow floreva-testimonials__arrow--next" id="floreva-next">
        ›
      </button>
    </div>
  </div>

  <!-- Scroll to top button -->
  <button class="floreva-testimonials__scroll-top" id="floreva-scroll-top" style="display: none;">
    <div class="floreva-testimonials__scroll-icon"></div>
  </button>
</div>

<script>
  (function() {
    const carousel = document.getElementById('floreva-carousel');
    const dotsContainer = document.getElementById('floreva-dots');
    const prevBtn = document.getElementById('floreva-prev');
    const nextBtn = document.getElementById('floreva-next');
    const scrollTopBtn = document.getElementById('floreva-scroll-top');
    const cards = carousel.querySelectorAll('.floreva-testimonials__card');
    
    let currentIndex = 0;

    // Create dots
    function createDots() {
      if (window.innerWidth >= 768) return;
      
      dotsContainer.innerHTML = '';
      cards.forEach((_, index) => {
        const dot = document.createElement('button');
        dot.classList.add('floreva-testimonials__dot');
        if (index === 0) dot.classList.add('active');
        dot.addEventListener('click', () => scrollToCard(index));
        dotsContainer.appendChild(dot);
      });
    }

    // Scroll to specific card
    function scrollToCard(index) {
      currentIndex = index;
      const cardWidth = cards[0].offsetWidth;
      const gap = 20;
      carousel.scrollTo({
        left: (cardWidth + gap) * index,
        behavior: 'smooth'
      });
      updateDots();
      updateArrows();
    }

    // Update active dot
    function updateDots() {
      const dots = dotsContainer.querySelectorAll('.floreva-testimonials__dot');
      dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentIndex);
      });
    }

    // Update arrows state
    function updateArrows() {
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex === cards.length - 1;
    }

    // Previous card
    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        scrollToCard(currentIndex - 1);
      }
    });

    // Next card
    nextBtn.addEventListener('click', () => {
      if (currentIndex < cards.length - 1) {
        scrollToCard(currentIndex + 1);
      }
    });

    // Detect scroll position
    carousel.addEventListener('scroll', () => {
      if (window.innerWidth >= 768) return;
      
      const cardWidth = cards[0].offsetWidth;
      const gap = 20;
      const scrollPosition = carousel.scrollLeft;
      const newIndex = Math.round(scrollPosition / (cardWidth + gap));
      
      if (newIndex !== currentIndex) {
        currentIndex = newIndex;
        updateDots();
        updateArrows();
      }
    });

    // Scroll to top functionality
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        scrollTopBtn.style.display = 'flex';
      } else {
        scrollTopBtn.style.display = 'none';
      }
    });

    scrollTopBtn.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Initialize
    createDots();
    updateArrows();

    // Reinitialize on resize
    window.addEventListener('resize', () => {
      createDots();
    });
  })();
</script>
