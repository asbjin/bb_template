            <div
              class="swiper-wrapper"
            >
              {% for block in section.blocks %}
                <div
                  class="slider-cartes-custom__img-container swiper-slide"
                >
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | img_url: 'master' }}"
                      width="500"
                      height="500"
                      alt=""
                      loading="lazy"
                      class="slider-cartes-custom__img slider-cartes-custom__img-desktop "
                    >

                    <img
                        src="{{ block.settings.image | img_url: 'master' }}"
                        width="500"
                        height="500"
                        alt=""
                        loading="lazy"
                        class="slider-cartes-custom__img slider-cartes-custom__img-mobile "
                      >
                  {% else %}
                    {{ 'product-2' | placeholder_svg_tag: 'placeholder_svg' }}
                  {% endif %}
                </div>
              {% endfor %}
