{% liquid
  assign heading = section.settings.heading
  assign heading_size = section.settings.heading_size
  assign heading_color = section.settings.heading_color
  assign heading_size_mobile = section.settings.heading_size_mobile

  assign stars = section.settings.stars
  assign stars_color = section.settings.stars_color
  assign stars_size = section.settings.stars_size

  assign rating = section.settings.rating
  assign rating_size = section.settings.rating_size
  assign rating_color = section.settings.rating_color
  assign rating_size_mobile = section.settings.rating_size_mobile

  assign image_border_radius = section.settings.image_border_radius
  assign image_border_width = section.settings.image_border_width
  assign image_border_style = section.settings.image_border_style
  assign image_border_color = section.settings.image_border_color

  assign item_stars_color = section.settings.item_stars_color

  assign item_title_size = section.settings.item_title_size
  assign item_title_weight = section.settings.item_title_weight
  assign item_title_color = section.settings.item_title_color
  assign item_title_size_mobile = section.settings.item_title_size_mobile

  assign item_text_size = section.settings.item_text_size
  assign item_text_color = section.settings.item_text_color
  assign item_text_size_mobile = section.settings.item_text_size_mobile

  assign item_background = section.settings.item_background
  assign item_border_width = section.settings.item_border_width
  assign item_border_style = section.settings.item_border_style
  assign item_border_color = section.settings.item_border_color
  assign item_border_radius = section.settings.item_border_radius

  assign enable_navigation_top = section.settings.enable_navigation_top
  assign navigation_color = section.settings.navigation_color
  assign navigation_background = section.settings.navigation_background

  assign layout_margin_top = section.settings.layout_margin_top
  assign layout_margin_bottom = section.settings.layout_margin_bottom
  assign layout_background = section.settings.layout_background
%}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<div id="shopify-section-{{section.id}}" class="shopify-section slider-cartes-custom-section">
  <style>
    .slider-cartes-custom-section {
      background-color: {{ layout_background }};
    }

    .slider-cartes-custom--wrapper {
      padding-top: 50px;
      padding-bottom: 50px;
        margin-top: {{ layout_margin_top }}px;
        margin-bottom: {{ layout_margin_bottom }}px;
    }

    .slider-cartes-custom {
      display: flex;
      flex-direction: column;
      width: 100%;
    }

    .heading-and-arrow {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-bottom: 30px;
      gap: 20px;
    }
    .heading-and-arrow *{
        font-size: {{ heading_size }}px !important;
        color: {{ heading_color }} !important;

    }

    .heading-and-buttons {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      margin-bottom: 30px;
      gap: 20px;
    }

    .rating-stars {
      display: flex;
    }

    .rating-stars svg {
      width: 15px;
      margin-top: -3px;
    }
    .rating-stars svg path {
      fill: {{ item_stars_color }} !important;
    }
    .slider-cartes-custom-container {
      flex-grow: 1;
      position: relative;
      width: 100%;
      height: auto !important;
      overflow: hidden;
      text-align: center;
    }

    .slider-cartes-custom--trustpilot-heading{
      display: flex;
      align-items: center;
      gap: 15px;
      font-size: {{ rating_size }}px;
      color: {{rating_color }};
      font-weight: 500;

    }

    .slider-cartes-custom--trustpilot-heading-stars {
      display: flex;
      align-items: center;
      gap: 3px;
    }

    .slider-cartes-custom--trustpilot-heading p {
      margin: 0;
    }

    .slider-cartes-custom--trustpilot-heading-stars svg {
      width: {{ stars_size }}px;
      height: {{ stars_size }}px;
      margin-bottom: 1px;
    }

    .slider-cartes-custom--trustpilot-heading-stars svg path {
      fill: {{ stars_color }};
    }

    .slider-cartes-custom-text {
      text-align: left;
    }

    .heading-small {
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-size: 17px;
      font-weight: 500;
      color: red;
      margin: 0;
    }

    .slider-cartes-custom-text .h2 {
      text-align: left;
    }

    .slider-cartes-custom-text .h2 strong {
      {% comment %} color: #333; {% endcomment %}
    }

    .slider-cartes-custom--socials {
      display: grid;
      grid-template-columns: auto auto;
      margin-top: 15px;
      justify-content: center;
      align-items: center;
    }

    .slider-cartes-custom--socials-item p {
      margin: 0;
      margin-top: 10px;
      line-height: 1.3;
      font-size: 12px;
      {% comment %} color: red; {% endcomment %}
    }

    .slider-cartes-custom-paragraph p,
    .slider-cartes-custom--socials-item p,
    .slider-cartes-product-date-container p,
    .slider-cartes-text * {
      margin: 0;
      font-weight: 400;
      color: {{ item_text_color }};
      font-size: {{ item_text_size }}px;
    }

    .slider-cartes-custom-paragraph {
      margin-top: 15px;
    }

    .slider-cartes-custom-badge__container,
    .slider-cartes-custom-tp_img-container,
    .slider-cartes-custom__desktop-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 15px;
    }

    .slider-cartes-custom-badge {
      background: #000;
      color: #fff;
      padding: 5px 10px;
      line-height: 1;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #000;
      box-shadow: inset 0 0 0 1px #fff;
      width: fit-content;
    }

    img.slider-cartes-custom-tp_img {
      {% comment %} width: 180px; {% endcomment %}
    }

    .site-slider-cartes-custom {
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 1;
      margin-top: 10px;
    }

    .site-slider-cartes-custom div {
      padding: 0 5px;
    }

    .site-reviews-custom > div:first-child {
      padding-left: 0;
    }

    .site-reviews-custom > div:last-child {
      padding-right: 0;
    }

    .site-slider-cartes-note {
      font-size: 20px;
      font-weight: 500;
    }

    .site-slider-cartes-count {
      font-size: 14px;
    }

    .see-reviews-btn {
      margin: 15px 0 0;
    }

    .heading-big-2 span {
      color: #4bb1c9;
    }

    .reviews-list.swiper-wrapper {
      min-height: 100% !important;
      height: 100% !important;
    }

    .reviews-list,
    .slider-cartes-list-item {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    .slider-cartes-custom__pagination {
      display: none;
    }

    .slider-cartes-text--full {
      display: block;
      -webkit-line-clamp: inherit;
      overflow: visible;
      max-height: 100%;
      transition: all 0.5s ease-in-out;
    }

    .slider-cartes-text--full.cropped {
      display: block;
      overflow: hidden;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      max-height: 100px;
      transition: all 0.5s ease-in-out;
    }

    .see-more {
      text-decoration: underline;
      cursor: pointer;
      display: block;
    }

    .slider-cartes-list__item {
      border-bottom-left-radius: {{ item_border_radius }}px;
      border-bottom-right-radius: {{ item_border_radius }}px;
      {% comment %} padding: 15px; {% endcomment %}
       overflow: hidden;
      text-align: left;
      border-bottom: {{item_border_width}}px {{item_border_style}} {{item_border_color}};
      border-right: {{item_border_width}}px {{item_border_style}} {{item_border_color}};
      border-left: {{item_border_width}}px {{item_border_style}} {{item_border_color}};
    }
    .slider-cartes-list__item a {
        padding: 15px;
        display: block;
        text-decoration: none;
        background: {{ item_background }};
        color: {{ item_text_color }};
    }

    .slider-cartes-list__item-no-image, .slider-cartes-custom__img-container svg {
      border-top-left-radius: {{ image_border_radius }}px;
      border-top-right-radius: {{ image_border_radius }}px;
      border: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
    }

    .slider-cartes-list__item-video, .slider-cartes-custom__img-container svg {
      border-top-left-radius: {{ item_border_radius }}px;
      border-top-right-radius: {{ item_border_radius }}px;
      padding: 0;
      border: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .slider-cartes-list__item-video video {
      width: 100%;
      object-fit: cover;
      height: 100%;
      border-radius: {{ item_border_radius }}px;
    }

    .slider-cartes-product-date-container {
      display: flex;
      align-items: flex-start;
      flex-direction: column-reverse;
      gap: 5px;
      margin-bottom: 5px;
    }

    .slider-cartes-product-title {
      text-transform: uppercase;
      font-size: 10px;
      letter-spacing: 0.1em;
      font-weight: 500;
      color: #e7955e;
    }

    .slider-cartes-date {
      font-size: 130px;
      margin-top: 0;
      line-height: 1;
    }

    .slider-cartes-custom__imgs-container {
      max-width: 100%;
      padding: 0;
      flex-shrink: 2;
      margin-right: 0px;
    }

    .slider-cartes-custom__img-container.swiper-slide {
      max-width: 100%;
      height: auto !important;
      border: 1px solid transparent;
    }

    .slider-cartes-custom__img-container-space img {
      padding: 15px 15px 0 15px;
    }

    img.slider-cartes-custom__img, .slider-cartes-custom__img-container svg{
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-top-right-radius: {{ image_border_radius }}px;
      border-top-left-radius: {{ image_border_radius }}px;
      border-top: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
      border-right: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
      border-left: {{ image_border_width }}px {{ image_border_style }} {{ image_border_color }};
      max-height: 100%;
    }

    .slider-cartes-custom--trustpilot-heading_desktop,
    .slider-cartes-custom__desktop-arrow {
      display: none;
    }

    .slider-cartes-custom__desktop-arrow {
      position: relative;
      margin-top: 20px;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      gap: 10px;
    }

    .slider-cartes-custom-bottom__desktop-arrow {
      margin-top: 40px;
      justify-content: flex-end;
    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev,
    .slider-cartes-custom__desktop-arrow .swiper-button-next {
      position: static;
      inset: 0;
      display: flex !important;
      justify-content: center;
      align-items: center;
      width: 34px;
      height: 34px;
      border-radius: 100%;
      border: 1px solid {{ navigation_color }};
      background-color: {{ navigation_background }};
      z-index: auto !important;

    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev:hover,
    .slider-cartes-custom__desktop-arrow .swiper-button-next:hover {
      background-color: {{ navigation_color }};
    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev svg {
      transform: rotate(180deg);
    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev svg,
    .slider-cartes-custom__desktop-arrow .swiper-button-next svg {
      fill: {{ navigation_color }};
      display: block;
      width: 18px;
      height: 18px;
    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev:hover svg,
    .slider-cartes-custom__desktop-arrow .swiper-button-next:hover svg {
      fill: {{ navigation_background }};
      display: block;
      width: 18px;
      height: 18px;
    }

    .slider-cartes-custom__desktop-arrow .swiper-button-prev:after,
    .slider-cartes-custom__desktop-arrow .swiper-button-next:after {
      display: none;
    }

    .slider-cartes-custom__desktop-buttons {
      display: flex;
      gap: 10px;
      width: 100%;
      justify-content: flex-end;
    }

    .slider-cartes-product-date-container .slider-cartes-title {
        font-size: {{ item_title_size }}px ;
        color: {{ item_title_color }} ;
        font-weight: {{ item_title_weight }} !important;

    }
    @media screen and (max-width: 1000px) {
      .slider-cartes-custom__desktop-buttons,
      .slider-cartes-custom-bottom__desktop-arrow {
        display: none;
      }
      .slider-cartes-custom__pagination-mobile {
        display: block;
        margin-top: 20px;
      }
      .heading-and-buttons .h2 {
        text-align: center;
      }
    }
    @media screen and (max-width: 767px) {
      .slider-cartes-custom__img-desktop {
        display: none;
      }
      .slider-cartes-custom--trustpilot-heading{
            font-size: {{ rating_size_mobile }}px;
        }
        .heading-and-arrow *{
            font-size: {{ heading_size_mobile }}px !important;
        }
        .slider-cartes-product-date-container *{
            font-size: {{ item_title_size_mobile }}px !important;
        }
        .slider-cartes-text *{
            font-size: {{ item_text_size_mobile }}px !important;
        }
    }

    @media screen and (min-width: 768px) {
      .slider-cartes-custom__img-mobile {
        display: none;
      }
    }
  </style>
