  <style>
    /* ====== MOBILE FIRST / PREMIUM ====== */
    .flv-coach{background:var(--bg);color:var(--ink);}
    .flv-wrap{max-width:{{ section.settings.max_width }};margin:0 auto;padding:20px 16px;}

    .flv-hero{position:relative;background:linear-gradient(180deg, rgba(215,169,75,.10), transparent);
      border:1px solid rgba(215,169,75,.35);border-radius:18px;padding:16px;
      box-shadow:0 10px 28px rgba(215,169,75,.14);}
    .flv-badges{display:flex;gap:8px;flex-wrap:wrap;margin-bottom:8px}
    .flv-chip{display:inline-flex;align-items:center;padding:6px 10px;border-radius:999px;
      background:#F7F1E3;border:1px solid rgba(215,169,75,.6);font-size:12px;font-weight:700}
    .flv-chip--gold{background:linear-gradient(180deg, #F6E4B6, #EFD28B)}
    .flv-hero-icon{width:72px;height:72px;object-fit:contain;display:block;margin-bottom:8px;filter:drop-shadow(0 1px 0 rgba(0,0,0,.05));}
    .flv-title{font-size:28px;line-height:1.2;margin:8px 0 6px;}
    .flv-sub{font-size:16px;opacity:.9;margin:0 auto 6px;}
    .flv-note{font-size:13px;opacity:.85;margin-top:8px}
    .flv-cta{display:flex;gap:10px;flex-wrap:wrap;margin-top:10px}
    .flv-btn{display:inline-block;padding:12px 16px;border-radius:14px;text-decoration:none;font-weight:700}
    .flv-btn--solid{background:var(--green);color:#fff;box-shadow:0 6px 20px rgba(0,126,64,.25)}
    .flv-btn--gold{background:linear-gradient(180deg, var(--gold), #C99638);color:#1A1A1A}
    .flv-link{color:var(--green);font-weight:700;text-decoration:underline}

    .flv-block{margin-top:22px}
    .flv-h3{font-size:20px;margin:0 0 8px}
    .flv-h4{font-size:17px;margin:6px 0}
    .flv-p{font-size:15px;margin:0}
    .flv-list{padding-left:18px;margin:0}
    .flv-list li{margin:6px 0}

    /* Stepper */
    .flv-stepper{background:#fff;border:1px solid #eee;border-radius:16px;padding:12px}
    .flv-stepper input{display:none}
    .flv-step-tabs{display:grid;grid-template-columns:repeat(3,1fr);gap:8px;position:relative;margin-bottom:10px}
    .flv-step-tabs label{display:grid;place-items:center;height:34px;border-radius:10px;
      border:1px solid #eee;background:#fafafa;font-weight:800}
    .flv-progress{position:absolute;left:0;top:0;height:34px;width:33.33%;border-radius:10px;
      background:linear-gradient(180deg, var(--gold), #C99638);z-index:0;transition:transform .25s ease}
    #flv-s1:checked ~ .flv-step-tabs .flv-progress{transform:translateX(0)}
    #flv-s2:checked ~ .flv-step-tabs .flv-progress{transform:translateX(100%)}
    #flv-s3:checked ~ .flv-step-tabs .flv-progress{transform:translateX(200%)}
    .flv-step-tabs label{position:relative;z-index:1}

    .flv-step-panels{display:grid}
    .flv-panel{padding:8px 4px}
    #flv-s1:checked ~ .flv-step-panels .flv-panel:nth-child(1){display:block}
    #flv-s2:checked ~ .flv-step-panels .flv-panel:nth-child(2){display:block}
    #flv-s3:checked ~ .flv-step-panels .flv-panel:nth-child(3){display:block}
    .flv-step-panels .flv-panel{display:none}

    /* Cards & grid */
    .flv-grid{display:grid;gap:12px}
    .flv-grid--2{grid-template-columns:1fr}
    .flv-card{background:#FAFAFA;border:1px solid #EEE;border-radius:16px;padding:14px}
    .flv-card--lift{transition:transform .15s ease, box-shadow .15s ease}
    .flv-card--lift:hover{transform:translateY(-2px);box-shadow:0 10px 24px rgba(0,0,0,.06)}
    .flv-ico{width:56px;height:56px;object-fit:contain}

    /* Roadmap */
    .flv-road{display:flex;gap:10px;flex-direction:column}
    .flv-stage{position:relative;background:#fff;border:1px solid #EEE;border-radius:14px;padding:12px 12px 12px 48px;box-shadow:0 8px 24px rgba(0,0,0,.04)}
    .flv-badge{position:absolute;left:10px;top:10px;width:28px;height:28px;border-radius:50%;background:var(--gold);color:#1A1A1A;font-weight:800;display:grid;place-items:center}

    /* Offerta */
    .flv-offer{margin-top:24px}
    .flv-offer-inner{border-radius:18px;padding:16px;background:linear-gradient(180deg, rgba(215,169,75,.18), rgba(215,169,75,.06));border:1px solid rgba(215,169,75,.45)}
    .flv-offer-kicker{font-weight:800;letter-spacing:.2px;color:#1A1A1A;margin:0 0 4px}
    .flv-legal{font-size:12px;opacity:.8;margin-top:8px;text-align:center}

    /* Desktop tweaks */
    @media (min-width: 768px){
      .flv-title{font-size:34px}
      .flv-sub{font-size:18px;max-width:680px}
      .flv-grid--2{grid-template-columns:repeat(2,1fr)}
      .flv-road{flex-direction:row}
      .flv-stage{flex:1}
    }
  </style>
</section>

