          <div class="slide">
            {% if section.settings.video_3 != blank %}
            <div class="video-item" data-index="{{ slide_count }}">
              <video playsinline preload="metadata">
                <source src="{{ section.settings.video_3 }}" type="video/mp4">
              </video>
              {% if section.settings.thumbnail_3 != blank %}
              <img src="{{ section.settings.thumbnail_3 | image_url: width: 500 }}" class="video-poster">
              {% endif %}
              <div class="video-control">
                <button class="play-pause-btn" onclick="toggleVideo(this)">
                  <div class="play-icon"></div>
                  <div class="pause-icon"><span></span><span></span></div>
                </button>
              </div>
            </div>
            {% endif %}
            {% if section.settings.video_4 != blank %}
            <div class="video-item" data-index="{{ slide_count }}">
              <video playsinline preload="metadata">
